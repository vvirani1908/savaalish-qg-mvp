{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuestionGenerationOutput",
  "type": "object",
  "properties": {
    "run_metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string"
        },
        "docs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "model": {
          "type": "string"
        },
        "embedding_model": {
          "type": "string"
        },
        "k_context": {
          "type": "integer"
        },
        "cost_estimate_usd": {
          "type": "number"
        }
      },
      "required": [
        "created_at",
        "docs"
      ]
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "idea_summary": {
            "type": "string"
          },
          "difficulty": {
            "type": "string"
          },
          "question": {
            "type": "string"
          },
          "choices": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                }
              },
              "required": [
                "label",
                "text"
              ]
            }
          },
          "correct_label": {
            "type": "string"
          },
          "source_citations": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "quality": {
            "type": "object",
            "properties": {
              "overall": {
                "type": "number"
              },
              "clarity": {
                "type": "number"
              },
              "groundedness": {
                "type": "number"
              },
              "non_triviality": {
                "type": "number"
              },
              "distractor_quality": {
                "type": "number"
              },
              "notes": {
                "type": "string"
              }
            }
          }
        },
        "required": [
          "id",
          "question",
          "choices",
          "correct_label"
        ]
      }
    }
  },
  "required": [
    "run_metadata",
    "questions"
  ]
}